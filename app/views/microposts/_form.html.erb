<%= form_for [@edital , @micropost], :remote=>true do |f| %>

	<%= f.hidden_field :edital_id, "value" => @edital.id %>
	<%= f.hidden_field :user_id, "value" => current_user.id %>

  <div class="field">
    <%= f.label :post, "Esclarecimentos e respostas:" %><br />

<div id="mensagem_micropost">
	( Não serão aceitos impugnações postados no espaço abaixo, impugnações apenas através de upload de arquivos ao lado. )
</div>


    <%= f.text_area :post, :id=>"post-area", :class=>"round" %><input id="post-counter" value="2000" disabled="disabled">
  </div>
  <div class="actions">
    <%= f.submit "Salvar" , :disabled=>true, :class=>"g-button"%>
  </div>
<% end %>




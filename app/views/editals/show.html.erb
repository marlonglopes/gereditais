<% title "Dados do Edital: #{@edital.titulo}" %>

<table class="front" summary="For signed-in users">

	<tr>
		<td class="main">

			<%=render 'show'%>

			<% if logged_in? %>
				<%= render 'microposts/form' %>
			<% end %>

			<%= render 'microposts/microposts' %>				

		</td>

		<% if logged_in? %>
				<td class="sidebar round">
							<div id="stats" class="round">					
								<%= render 'shared/stats' %>
							</div>
							<br />
							<% flash.each do |name, msg| %>
							  <%= content_tag :div, msg, :class => "#{name} round" %>
							<% end %>
			
							<div id="uploads" class="round">	 
								<%=render 'uploads/uploads'%>
							</div>
							<br />
							<div id="impugnations" class="round">	 
								<%=render 'impugnations/impugnations'%>
							</div>
				</td>
		<% end %>
	</tr>


</table>
















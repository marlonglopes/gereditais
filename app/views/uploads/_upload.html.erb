
<div class="upload">
	

	<% path = upload_edital_upload_path(@edital,upload)  %>

	<%= "#{upload.user.razao_social}" if current_user.admin? %>

		<div class="edit_icon">
	<%= link_to image_tag("icons/pencil.png",:alt=>"Alterar proposta"),
				edit_edital_upload_path(@edital,upload), :remote=>true unless current_user.admin?%>
		</div>

<% agora = Time.now %>
<% abertura = @edital.abertura %>

	
		<span class="timestamp">

			<% if agora < abertura %>
				Proposta postada a  <%= time_ago_in_words(upload.updated_at) %>
			<% else %>
				<%=  link_to "Proposta", path %> postada a  <%= time_ago_in_words(upload.updated_at) %>
			<% end %>
		</span>

	<div class="clear"></div>

</div>




